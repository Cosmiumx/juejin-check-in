{
  "manifest_version": 3,
  "name": "Juejin Daily Companion",
  "version": "1.0.0",
  "description": "A personal productivity tool that helps you stay organized with your daily activities on Juejin developer community.",
  "author": "Cosmiumx",
  "homepage_url": "https://github.com/Cosmiumx/juejin-check-in",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "storage", "activeTab", "alarms"],
  "host_permissions": [
    "https://juejin.cn/user/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://juejin.cn/user/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "掘金签到助手"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
