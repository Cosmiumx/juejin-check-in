{
  "manifest_version": 3,
  "name": "掘金自动签到助手",
  "version": "1.0.0",
  "description": "自动为您在掘金平台进行签到，获取积分奖励，提升等级。无需手动操作，定时自动完成签到任务。",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["tabs", "storage", "activeTab", "alarms", "scripting"],
  "host_permissions": ["https://juejin.cn/*"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://juejin.cn/*"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "掘金自动签到助手"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
